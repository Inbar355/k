<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.Farmobile" version="1.0.13" versionName="1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>פארמוביל</name>
    <description>
        Farmobile app.
    </description>
    <author email="inbarbarproj@gmail.com">
        Farmobile app
    </author>
    <icon src="icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="fb:*" />
    <access launch-external="yes" origin="geo:*" />
    <access origin="*.google.com" />
    <access origin="*.googleapis.com" />
    <allow-intent href="market:*" />
    <resource-file src="google-services.json" target="google-services.json" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ee6e73" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="android-build-tool" value="gradle" />
</widget>
